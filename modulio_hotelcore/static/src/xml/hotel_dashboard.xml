<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="modulio_hotelcore.HotelDashboard">
        <div class="o_hotel_dashboard o-webclient">
            <t t-if="state.loading">
                <div class="o_spinner"/>
            </t>
            <t t-else="">
                <div class="o_hotel_dashboard_header">
                    <div>
                        <div class="o_hotel_dashboard_title">Hotel Dashboard</div>
                        <div class="o_hotel_dashboard_subtitle">Overview of room availability and status summary</div>
                        <div class="o_hotel_dashboard_last_updated" t-if="state.lastUpdated">
                            Last updated: <t t-esc="state.lastUpdated"/>
                        </div>
                        <div class="o_hotel_dashboard_state_info" t-if="state.hasActiveFilters">
                            <span class="badge badge-info">Active Filters: <t t-esc="getFilterSummary()"/></span>
                        </div>
                        <div class="o_hotel_dashboard_validation_errors" t-if="state.filterValidationErrors.length > 0">
                            <span class="badge badge-warning">Validation Errors: <t t-esc="state.filterValidationErrors.length"/></span>
                        </div>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary btn-sm" t-on-click="refreshData">
                            <i class="fa fa-refresh"/> Refresh
                        </button>
                    </div>
                </div>

                <div class="o_hotel_dashboard_content">
                    <div class="o_hotel_dashboard_filters o_control_panel">
                <div class="o_cp_buttons">
                    <div class="o_form_buttons_view">
                        <label>Room Status:</label>
                        <select name="state" 
                                t-model="state.filters.state"
                                t-on-change="onStateChange">
                            <option value="">All</option>
                            <option value="clean">Clean</option>
                            <option value="dirty">Dirty</option>
                            <option value="make_up_room">Make Up Room</option>
                            <option value="inspected">Inspected</option>
                            <option value="out_of_service">Out of Service</option>
                            <option value="out_of_order">Out of Order</option>
                            <option value="house_use">House Use</option>
                        </select>
                        <label class="ms8">Room Type:</label>
                        <select name="room_type_id" 
                                t-model="state.filters.room_type_id"
                                t-on-change="onRoomTypeChange">
                            <option value="">All</option>
                            <t t-foreach="state.roomTypeOptions" t-as="opt" t-key="opt.id">
                                <option t-att-value="opt.id" t-esc="opt.name"/>
                            </t>
                        </select>
                        <label class="ms8">Floor:</label>
                        <input type="number" 
                               name="floor" 
                               t-model="state.filters.floor"
                               t-on-change="onFloorChange"
                               placeholder="e.g. 1"/>
                        <label class="ms8">Start:</label>
                        <input type="date" 
                               name="start_date" 
                               t-model="state.filters.start_date"
                               t-on-change="onStartDateChange"/>
                        <label class="ms8">End:</label>
                        <input type="date" 
                               name="end_date" 
                               t-model="state.filters.end_date"
                               t-on-change="onEndDateChange"/>
                        <button type="button" class="btn btn-primary btn-sm ms-2" t-on-click="applyFilters">
                            <i class="fa fa-search"/> Search
                        </button>
                        <button type="button" class="btn btn-secondary btn-sm ms-1" t-on-click="clearFilters">
                            <i class="fa fa-times"/> Clear
                        </button>
                    </div>
                </div>
            </div>

                    <div class="o_hotel_dashboard_kpis o-flex o-row o-gutter">
                        <div class="o_kpi_card"><div class="o_kpi_value" t-esc="state.kpi.total"/>Total Rooms</div>
                        <div class="o_kpi_card o_text-success"><div class="o_kpi_value" t-esc="state.kpi.clean"/>Clean</div>
                        <div class="o_kpi_card o_text-primary"><div class="o_kpi_value" t-esc="state.kpi.check_in"/>Check In</div>
                        <div class="o_kpi_card o_text-secondary"><div class="o_kpi_value" t-esc="state.kpi.check_out"/>Check Out</div>
                        <div class="o_kpi_card o_text-warning"><div class="o_kpi_value" t-esc="state.kpi.dirty"/>Dirty</div>
                        <div class="o_kpi_card o_text-info"><div class="o_kpi_value" t-esc="state.kpi.make_up_room"/>Make Up Room</div>
                        <div class="o_kpi_card o_text-success"><div class="o_kpi_value" t-esc="state.kpi.inspected"/>Inspected</div>
                        <div class="o_kpi_card o_text-orange"><div class="o_kpi_value" t-esc="state.kpi.out_of_service"/>Out of Service</div>
                        <div class="o_kpi_card o_text-danger"><div class="o_kpi_value" t-esc="state.kpi.out_of_order"/>Out of Order</div>
                        <div class="o_kpi_card o_text-info"><div class="o_kpi_value" t-esc="state.kpi.house_use"/>House Use</div>
                    </div>
                </div>

                <div class="o_hotel_dashboard_rt o-mt16">
                    <h3>Room Types Summary</h3>
                    <div class="table-responsive">
                        <table class="o_list_view table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>Total</th>
                                    <th>Available</th>
                                    <th>Availability (%)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="state.roomTypes" t-as="rt" t-key="rt.code or rt.room_type_id or rt.name">
                                    <tr>
                                        <td t-esc="rt.name"/>
                                        <td t-esc="rt.code"/>
                                        <td t-esc="rt.total_rooms"/>
                                        <td t-esc="rt.available_rooms"/>
                                        <td>
                                            <t t-esc="(rt.availability_rate || 0).toFixed ? rt.availability_rate.toFixed(0) : rt.availability_rate"/>%
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="o_hotel_dashboard_rooms o-mt16">
                    <h3>Rooms</h3>
                    <div class="table-responsive">
                        <table class="o_list_view table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Room</th>
                                    <th>Floor</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Maintenance</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="state.rooms" t-as="r" t-key="r.id">
                                    <tr>
                                        <td t-esc="r.room_number"/>
                                        <td t-esc="r.floor"/>
                                        <td t-esc="r.room_type_id &amp;&amp; r.room_type_id[1]"/>
                                        <td>
                                            <span t-attf-class="o_status_badge o_state_#{r.state}">
                                                <t t-esc="r.state"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">-</span>
                                        </td>
                                        <td>
                                            <span t-attf-class="o_maintenance_badge #{r.maintenance_required ? 'o_maintenance_yes' : 'o_maintenance_no'}">
                                                <t t-esc="r.maintenance_required ? 'Yes' : 'No'"/>
                                            </span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-link p-0" t-on-click="() => openRoom(r.id)">Open</button>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>


