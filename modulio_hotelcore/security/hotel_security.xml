<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Modulio Hotel Category -->
        <record id="module_category_modulio_hotel" model="ir.module.category">
            <field name="name">Modulio Hotel</field>
            <field name="description">Hotel management by Modulio</field>
            <field name="sequence">100</field>
        </record>
        
        <!-- Hotel User Group -->
        <record id="group_hotel_user" model="res.groups">
            <field name="name">Hotel User</field>
            <field name="category_id" ref="module_category_modulio_hotel"/>
            <field name="comment">Basic hotel operations access</field>
        </record>

        <!-- Hotel Manager Group -->
        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Hotel Manager</field>
            <field name="category_id" ref="module_category_modulio_hotel"/>
            <field name="comment">Full hotel management access</field>
        </record>

        <!-- Hotel Front Office Group -->
        <record id="group_hotel_front_office" model="res.groups">
            <field name="name">Hotel Front Office</field>
            <field name="category_id" ref="module_category_modulio_hotel"/>
            <field name="comment">Front Office operations: check-in, check-out, house use</field>
        </record>

        <!-- Hotel Housekeeping Group -->
        <record id="group_hotel_housekeeping" model="res.groups">
            <field name="name">Hotel Housekeeping</field>
            <field name="category_id" ref="module_category_modulio_hotel"/>
            <field name="comment">Housekeeping operations: cleaning, inspection, maintenance</field>
        </record>

        <!-- Hotel Maintenance Group -->
        <record id="group_hotel_maintenance" model="res.groups">
            <field name="name">Hotel Maintenance</field>
            <field name="category_id" ref="module_category_modulio_hotel"/>
            <field name="comment">Maintenance operations: light and heavy maintenance</field>
        </record>

        <!-- Model Definitions for Access Rights -->
        <record id="model_hotel_room" model="ir.model">
            <field name="name">hotel.room</field>
            <field name="model">hotel.room</field>
        </record>

        <record id="model_hotel_room_type" model="ir.model">
            <field name="name">hotel.room.type</field>
            <field name="model">hotel.room.type</field>
        </record>

        <!-- Access rights are defined in security/ir.model.access.csv to avoid duplication -->

        <!-- Record Rules for Hotel Room Access -->
        <record id="rule_hotel_room_front_office" model="ir.rule">
            <field name="name">Hotel Room: Front Office Access</field>
            <field name="model_id" ref="model_hotel_room"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('group_hotel_front_office'))]"/>
        </record>

        <record id="rule_hotel_room_housekeeping" model="ir.rule">
            <field name="name">Hotel Room: Housekeeping Access</field>
            <field name="model_id" ref="model_hotel_room"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('group_hotel_housekeeping'))]"/>
        </record>

        <record id="rule_hotel_room_maintenance" model="ir.rule">
            <field name="name">Hotel Room: Maintenance Access</field>
            <field name="model_id" ref="model_hotel_room"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="global" eval="False"/>
            <field name="groups" eval="[(4, ref('group_hotel_maintenance'))]"/>
        </record>


    </data>
</odoo>
