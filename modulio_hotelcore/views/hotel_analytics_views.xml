<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Revenue Analytics View -->
        <record id="view_hotel_revenue_analytics" model="ir.ui.view">
            <field name="name">hotel.revenue.analytics</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Revenue Analytics">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="total_revenue"/>
                    <field name="monthly_revenue"/>
                    <field name="daily_revenue"/>
                    <field name="average_daily_rate"/>
                    <field name="revenue_per_available_room"/>
                    <field name="room_count"/>
                </list>
            </field>
        </record>

        <!-- Occupancy Analytics View -->
        <record id="view_hotel_occupancy_analytics" model="ir.ui.view">
            <field name="name">hotel.occupancy.analytics</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Occupancy Analytics">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="occupancy_rate"/>
                    <field name="monthly_occupancy_rate"/>
                    <field name="total_nights_sold"/>
                    <field name="monthly_nights_sold"/>
                    <field name="average_length_of_stay"/>
                    <field name="room_count"/>
                </list>
            </field>
        </record>

        <!-- Performance Analytics View -->
        <record id="view_hotel_performance_analytics" model="ir.ui.view">
            <field name="name">hotel.performance.analytics</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Performance Analytics">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="booking_count"/>
                    <field name="monthly_booking_count"/>
                    <field name="cancellation_rate"/>
                    <field name="no_show_rate"/>
                    <field name="customer_satisfaction_score"/>
                    <field name="room_count"/>
                </list>
            </field>
        </record>

        <!-- Market Analytics View -->
        <record id="view_hotel_market_analytics" model="ir.ui.view">
            <field name="name">hotel.market.analytics</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Market Analytics">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="market_share"/>
                    <field name="competitive_index"/>
                    <field name="demand_forecast"/>
                    <field name="seasonal_demand_factor"/>
                    <field name="room_count"/>
                </list>
            </field>
        </record>

        <!-- Room Type Analytics Dashboard View -->
        <record id="view_hotel_room_type_analytics_dashboard" model="ir.ui.view">
            <field name="name">hotel.room.type.analytics.dashboard</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <kanban string="Room Type Analytics Dashboard">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="total_revenue"/>
                    <field name="occupancy_rate"/>
                    <field name="average_daily_rate"/>
                    <field name="booking_count"/>
                    <field name="customer_satisfaction_score"/>
                    <field name="is_premium"/>
                    <field name="is_suite"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="code"/>
                                            </div>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Revenue: <field name="total_revenue"/></span>
                                                <span>Occupancy: <field name="occupancy_rate"/>%</span>
                                                <span t-if="record.is_premium.raw_value" class="badge badge-success">Premium</span>
                                                <span t-if="record.is_suite.raw_value" class="badge badge-info">Suite</span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span>ADR: <field name="average_daily_rate"/></span>
                                                <span>Bookings: <field name="booking_count"/></span>
                                                <span>Rating: <field name="customer_satisfaction_score"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Revenue Analytics Action -->
        <record id="action_hotel_revenue_analytics" model="ir.actions.act_window">
            <field name="name">Revenue Analytics</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="view_hotel_revenue_analytics"/>
            <field name="context">{'search_default_group_by_name': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No revenue data found!
                </p>
                <p>
                    Revenue analytics show financial performance metrics
                    for each room type including total, monthly, and daily revenue.
                </p>
            </field>
        </record>

        <!-- Occupancy Analytics Action -->
        <record id="action_hotel_occupancy_analytics" model="ir.actions.act_window">
            <field name="name">Occupancy Analytics</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="view_hotel_occupancy_analytics"/>
            <field name="context">{'search_default_group_by_name': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No occupancy data found!
                </p>
                <p>
                    Occupancy analytics show room utilization metrics
                    including occupancy rates and nights sold.
                </p>
            </field>
        </record>

        <!-- Performance Analytics Action -->
        <record id="action_hotel_performance_analytics" model="ir.actions.act_window">
            <field name="name">Performance Analytics</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="view_hotel_performance_analytics"/>
            <field name="context">{'search_default_group_by_name': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No performance data found!
                </p>
                <p>
                    Performance analytics show booking metrics including
                    booking counts, cancellation rates, and customer satisfaction.
                </p>
            </field>
        </record>

        <!-- Market Analytics Action -->
        <record id="action_hotel_market_analytics" model="ir.actions.act_window">
            <field name="name">Market Analytics</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="view_id" ref="view_hotel_market_analytics"/>
            <field name="context">{'search_default_group_by_name': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No market data found!
                </p>
                <p>
                    Market analytics show competitive position metrics
                    including market share and demand forecasts.
                </p>
            </field>
        </record>

        <!-- Room Type Analytics Dashboard Action -->
        <record id="action_hotel_room_type_analytics_dashboard" model="ir.actions.act_window">
            <field name="name">Room Type Analytics Dashboard</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_hotel_room_type_analytics_dashboard"/>
            <field name="context">{'search_default_group_by_name': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No analytics data found!
                </p>
                <p>
                    Analytics dashboard provides a comprehensive view
                    of all room type performance metrics.
                </p>
            </field>
        </record>


    </data>
</odoo>
