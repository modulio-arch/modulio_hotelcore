<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Hotel Configuration List View -->
        <record id="view_hotel_configuration_list" model="ir.ui.view">
            <field name="name">hotel.configuration.list</field>
            <field name="model">hotel.configuration</field>
            <field name="arch" type="xml">
                <list string="Hotel Configuration">
                    <field name="hotel_name"/>
                    <field name="hotel_code"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="timezone"/>
                    <field name="currency_id"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Hotel Configuration Form View -->
        <record id="view_hotel_configuration_form" model="ir.ui.view">
            <field name="name">hotel.configuration.form</field>
            <field name="model">hotel.configuration</field>
            <field name="arch" type="xml">
                <form string="Hotel Configuration">
                    <header>
                        <button name="action_view_rooms" type="object" string="View Rooms" class="btn-primary"/>
                        <button name="action_view_floors" type="object" string="View Floors" class="btn-secondary"/>
                        <button name="action_view_room_types" type="object" string="View Room Types" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="hotel_name" placeholder="Enter hotel name..."/>
                            </h1>
                        </div>
                        
                        <notebook>
                            <!-- Basic Information Tab -->
                            <page string="Basic Information" name="basic_info">
                                <group>
                                    <group>
                                        <field name="hotel_name"/>
                                        <field name="hotel_code"/>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="timezone"/>
                                        <field name="currency_id"/>
                                        <field name="active"/>
                                    </group>
                                </group>
                                
                                <group string="Address Information">
                                    <group>
                                        <field name="address"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                    </group>
                                    <group>
                                        <field name="country_id"/>
                                        <field name="zip"/>
                                        <field name="phone"/>
                                    </group>
                                </group>
                                
                                <group>
                                    <field name="email"/>
                                    <field name="website"/>
                                </group>
                                
                                <group>
                                    <field name="full_address" readonly="1"/>
                                </group>
                            </page>

                            <!-- Check-in/Check-out Settings Tab -->
                            <page string="Check-in/Check-out Settings" name="check_settings">
                                <group>
                                    <group>
                                        <field name="check_in_time"/>
                                        <field name="check_out_time"/>
                                        <field name="early_check_in_allowed"/>
                                        <field name="late_check_out_allowed"/>
                                    </group>
                                    <group>
                                        <field name="early_check_in_fee"/>
                                        <field name="late_check_out_fee"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Room Management Settings Tab -->
                            <page string="Room Management" name="room_management">
                                <group>
                                    <group>
                                        <field name="auto_housekeeping"/>
                                        <field name="housekeeping_inspection_required"/>
                                        <field name="maintenance_auto_assign"/>
                                        <field name="room_status_auto_update"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Reservation Settings Tab -->
                            <page string="Reservation Settings" name="reservation_settings">
                                <group>
                                    <group>
                                        <field name="advance_booking_days"/>
                                        <field name="minimum_stay_nights"/>
                                        <field name="maximum_stay_nights"/>
                                    </group>
                                    <group>
                                        <field name="cancellation_hours"/>
                                        <field name="no_show_hours"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Pricing Settings Tab -->
                            <page string="Pricing Settings" name="pricing_settings">
                                <group>
                                    <group>
                                        <field name="base_price_currency"/>
                                        <field name="tax_included"/>
                                    </group>
                                    <group>
                                        <field name="service_charge_rate"/>
                                        <field name="government_tax_rate"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Housekeeping Settings Tab -->
                            <page string="Housekeeping Settings" name="housekeeping_settings">
                                <group>
                                    <group>
                                        <field name="housekeeping_shift_start"/>
                                        <field name="housekeeping_shift_end"/>
                                        <field name="housekeeping_rooms_per_staff"/>
                                    </group>
                                    <group>
                                        <field name="housekeeping_inspection_time"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Maintenance Settings Tab -->
                            <page string="Maintenance Settings" name="maintenance_settings">
                                <group>
                                    <group>
                                        <field name="maintenance_priority_levels"/>
                                        <field name="maintenance_response_time"/>
                                        <field name="maintenance_escalation_hours"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Security Settings Tab -->
                            <page string="Security Settings" name="security_settings">
                                <group>
                                    <group>
                                        <field name="key_card_system"/>
                                        <field name="cctv_monitoring"/>
                                        <field name="security_24_7"/>
                                        <field name="guest_registration_required"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Integration Settings Tab -->
                            <page string="Integration Settings" name="integration_settings">
                                <group>
                                    <group>
                                        <field name="pms_integration"/>
                                        <field name="pms_system_name"/>
                                    </group>
                                    <group>
                                        <field name="pms_api_url"/>
                                        <field name="pms_api_key" password="True"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Reporting Settings Tab -->
                            <page string="Reporting Settings" name="reporting_settings">
                                <group>
                                    <group>
                                        <field name="daily_report_time"/>
                                        <field name="weekly_report_day"/>
                                        <field name="monthly_report_day"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hotel Configuration Search View -->
        <record id="view_hotel_configuration_search" model="ir.ui.view">
            <field name="name">hotel.configuration.search</field>
            <field name="model">hotel.configuration</field>
            <field name="arch" type="xml">
                <search string="Hotel Configuration">
                    <field name="hotel_name"/>
                    <field name="hotel_code"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="timezone"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                        <filter string="Timezone" name="group_timezone" context="{'group_by': 'timezone'}"/>
                        <filter string="Currency" name="group_currency" context="{'group_by': 'currency_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Hotel Configuration Kanban View -->
        <record id="view_hotel_configuration_kanban" model="ir.ui.view">
            <field name="name">hotel.configuration.kanban</field>
            <field name="model">hotel.configuration</field>
            <field name="arch" type="xml">
                <kanban string="Hotel Configuration">
                    <field name="hotel_name"/>
                    <field name="hotel_code"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="timezone"/>
                    <field name="active"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="hotel_name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="hotel_code"/> - <field name="city"/>
                                            </div>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span><field name="country_id"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span><field name="timezone"/></span>
                                                <span t-if="record.active.raw_value" class="badge badge-success">Active</span>
                                                <span t-else="" class="badge badge-secondary">Inactive</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Hotel Configuration Action -->
        <record id="action_hotel_configuration_act_window" model="ir.actions.act_window">
            <field name="name">Hotel Configuration</field>
            <field name="res_model">hotel.configuration</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_hotel_configuration_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hotel configuration found!
                </p>
                <p>
                    Create a hotel configuration to set up your hotel's basic settings,
                    policies, and operational parameters.
                </p>
            </field>
        </record>

    </data>
</odoo>
