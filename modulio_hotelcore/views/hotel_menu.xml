<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Main Hotel Menu -->
        <menuitem id="menu_hotel_main" 
                  name="Hotel Management" 
                  web_icon="modulio_hotelcore,static/description/icon.png"
                  sequence="10"/>

        <!-- Hotel Configuration Menu -->
        <menuitem id="menu_hotel_config" 
                  name="Configuration" 
                  parent="menu_hotel_main" 
                  sequence="50"/>

        <!-- Rooms Menu -->
        <menuitem id="menu_hotel_room" 
                  name="Rooms" 
                  parent="menu_hotel_main" 
                  action="action_hotel_room_act_window" 
                  sequence="20"
                  groups="modulio_hotelcore.group_hotel_front_office,modulio_hotelcore.group_hotel_housekeeping,modulio_hotelcore.group_hotel_maintenance"/>

        <!-- Front Office Menu -->
        <menuitem id="menu_hotel_front_office" 
                  name="Front Office" 
                  parent="menu_hotel_main" 
                  sequence="25"
                  groups="modulio_hotelcore.group_hotel_front_office"/>

        <menuitem id="menu_hotel_front_office_rooms" 
                  name="Room Management" 
                  parent="menu_hotel_front_office" 
                  action="action_hotel_room_act_window" 
                  sequence="10"
                  groups="modulio_hotelcore.group_hotel_front_office"/>

        <!-- Housekeeping Menu -->
        <menuitem id="menu_hotel_housekeeping" 
                  name="Housekeeping" 
                  parent="menu_hotel_main" 
                  sequence="26"
                  groups="modulio_hotelcore.group_hotel_housekeeping"/>

        <menuitem id="menu_hotel_housekeeping_rooms" 
                  name="Room Cleaning" 
                  parent="menu_hotel_housekeeping" 
                  action="action_hotel_room_act_window" 
                  sequence="10"
                  groups="modulio_hotelcore.group_hotel_housekeeping"/>

        <!-- Maintenance Menu -->
        <menuitem id="menu_hotel_maintenance" 
                  name="Maintenance" 
                  parent="menu_hotel_main" 
                  sequence="27"
                  groups="modulio_hotelcore.group_hotel_maintenance"/>

        <menuitem id="menu_hotel_maintenance_rooms" 
                  name="Room Maintenance" 
                  parent="menu_hotel_maintenance" 
                  action="action_hotel_room_act_window" 
                  sequence="10"
                  groups="modulio_hotelcore.group_hotel_maintenance"/>

        <!-- Room Types Menu -->
        <menuitem id="menu_hotel_room_type" 
                  name="Room Types" 
                  parent="menu_hotel_config" 
                  action="action_hotel_room_type_act_window" 
                  sequence="20"
                  groups="base.group_system"/>

        <!-- Settings Shortcut -->
        <record id="action_modulio_hotelcore_settings" model="ir.actions.act_window">
          <field name="name">Hotel Core Settings</field>
          <field name="res_model">res.config.settings</field>
          <field name="view_mode">form</field>
          <field name="target">inline</field>
          <field name="context">{'module': 'modulio_hotelcore', 'bin_size': False}</field>
        </record>

        <menuitem id="menu_settings_modulio_hotelcore"
                  name="Settings"
                  parent="menu_hotel_config"
                  action="action_modulio_hotelcore_settings"
                  sequence="99"
                  groups="base.group_system"/>

    </data>
</odoo>
