<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Hotel Room Status History List View -->
        <record id="view_hotel_room_status_history_list" model="ir.ui.view">
            <field name="name">hotel.room.status.history.list</field>
            <field name="model">hotel.room.status.history</field>
            <field name="arch" type="xml">
                <list string="Room Status History">
                    <field name="room_number"/>
                    <field name="floor_id"/>
                    <field name="room_type_id"/>
                    <field name="change_type" widget="badge"/>
                    <field name="status_summary"/>
                    <field name="changed_by"/>
                    <field name="change_date"/>
                    <field name="change_reason"/>
                </list>
            </field>
        </record>

        <!-- Hotel Room Status History Form View -->
        <record id="view_hotel_room_status_history_form" model="ir.ui.view">
            <field name="name">hotel.room.status.history.form</field>
            <field name="model">hotel.room.status.history</field>
            <field name="arch" type="xml">
                <form string="Room Status History">
                    <header>
                        <button name="action_view_room" type="object" string="View Room" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="room_id"/>
                                <field name="room_number" readonly="1"/>
                                <field name="floor_id" readonly="1"/>
                                <field name="room_type_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="change_type"/>
                                <field name="changed_by"/>
                                <field name="change_date"/>
                                <field name="change_method"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="old_state" readonly="1"/>
                                <field name="old_maintenance_required" readonly="1"/>
                            </group>
                            <group>
                                <field name="new_state" readonly="1"/>
                                <field name="new_maintenance_required" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="status_summary" readonly="1"/>
                        </group>
                        <group>
                            <field name="change_reason" readonly="1"/>
                        </group>
                        <group>
                            <field name="change_notes" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Hotel Room Status History Search View -->
        <record id="view_hotel_room_status_history_search" model="ir.ui.view">
            <field name="name">hotel.room.status.history.search</field>
            <field name="model">hotel.room.status.history</field>
            <field name="arch" type="xml">
                <search string="Room Status History">
                    <field name="room_number"/>
                    <field name="floor_id"/>
                    <field name="room_type_id"/>
                    <field name="change_type"/>
                    <field name="changed_by"/>
                    <field name="change_date" string="From (Change Date)" filter_domain="[('change_date', '&gt;=', self)]"/>
                    <field name="change_date" string="To (Change Date)" filter_domain="[('change_date', '&lt;=', self)]"/>
                    <separator/>
                    <filter string="Occupancy Changes" name="occupancy" domain="[('change_type', '=', 'occupancy')]"/>
                    <filter string="Housekeeping Changes" name="housekeeping" domain="[('change_type', '=', 'housekeeping')]"/>
                    <filter string="Maintenance Changes" name="maintenance" domain="[('change_type', '=', 'maintenance')]"/>
                    <filter string="Blocking Changes" name="blocking" domain="[('change_type', '=', 'blocking')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('change_date', '>=', context_today())]"/>
                    <filter string="This Week" name="this_week" domain="[('change_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('change_date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <filter string="Has Changes" name="has_changes" domain="[('has_changes', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Room" name="group_room" context="{'group_by': 'room_id'}"/>
                        <filter string="Floor" name="group_floor" context="{'group_by': 'floor_id'}"/>
                        <filter string="Room Type" name="group_room_type" context="{'group_by': 'room_type_id'}"/>
                        <filter string="Change Type" name="group_change_type" context="{'group_by': 'change_type'}"/>
                        <filter string="Changed By" name="group_changed_by" context="{'group_by': 'changed_by'}"/>
                        <filter string="Change Date" name="group_change_date" context="{'group_by': 'change_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Hotel Room Status History Kanban View -->
        <record id="view_hotel_room_status_history_kanban" model="ir.ui.view">
            <field name="name">hotel.room.status.history.kanban</field>
            <field name="model">hotel.room.status.history</field>
            <field name="arch" type="xml">
                <kanban string="Room Status History">
                    <field name="room_number"/>
                    <field name="change_type"/>
                    <field name="status_summary"/>
                    <field name="changed_by"/>
                    <field name="change_date"/>
                    <field name="change_reason"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                Room <field name="room_number"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="change_type" widget="badge"/>
                                            </div>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span><field name="status_summary"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span><field name="changed_by"/></span>
                                                <span><field name="change_date"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Hotel Room Status History Action -->
        <record id="action_hotel_room_status_history_act_window" model="ir.actions.act_window">
            <field name="name">Room Status History</field>
            <field name="res_model">hotel.room.status.history</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="search_view_id" ref="view_hotel_room_status_history_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No status changes recorded yet!
                </p>
                <p>
                    Room status history tracks all changes to room occupancy,
                    housekeeping, and maintenance status over time.
                </p>
            </field>
        </record>

    </data>
</odoo>
