<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Hotel Room List View -->
        <record id="view_hotel_room_list" model="ir.ui.view">
            <field name="name">hotel.room.list</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <list string="Rooms">
                    <field name="room_number"/>
                    <field name="floor"/>
                    <field name="room_type_id"/>
                    <field name="state" widget="badge"/>
                    <field name="max_occupancy"/>
                    <field name="maintenance_required" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Hotel Room Form View -->
        <record id="view_hotel_room_form" model="ir.ui.view">
            <field name="name">hotel.room.form</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <form string="Room">
                    <header>
                        <!-- Front Office Actions -->
                        <button name="action_check_in" string="Check In" type="object" class="btn-primary" 
                                invisible="state not in ['clean', 'inspected']"
                                groups="modulio_hotelcore.group_hotel_front_office"/>
                        <button name="action_check_out" string="Check Out" type="object" class="btn-secondary" 
                                invisible="state != 'check_in'"
                                groups="modulio_hotelcore.group_hotel_front_office"/>
                        <button name="action_room_ready_for_cleaning" string="Ready for Cleaning" type="object" class="btn-warning" 
                                invisible="state != 'check_out'"
                                groups="modulio_hotelcore.group_hotel_front_office"/>
                        <button name="action_assign_house_use" string="Assign House Use" type="object" class="btn-info" 
                                invisible="state not in ['clean', 'inspected']"
                                groups="modulio_hotelcore.group_hotel_front_office"/>
                        <button name="action_staff_checkout" string="Staff Checkout" type="object" class="btn-secondary" 
                                invisible="state != 'house_use'"
                                groups="modulio_hotelcore.group_hotel_front_office"/>
                        
                        <!-- Housekeeping Actions -->
                        <button name="action_start_cleaning" string="Start Cleaning" type="object" class="btn-warning" 
                                invisible="state != 'dirty'"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                        <button name="action_finish_cleaning" string="Finish Cleaning" type="object" class="btn-info" 
                                invisible="state != 'make_up_room'"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                        <button name="action_final_inspection" string="Final Inspection" type="object" class="btn-success" 
                                invisible="state != 'clean'"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                        <button name="action_maintenance_light" string="Light Maintenance" type="object" class="btn-warning" 
                                invisible="state != 'clean'"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                        <button name="action_maintenance_heavy" string="Heavy Maintenance" type="object" class="btn-danger" 
                                invisible="state != 'clean'"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                        <button name="action_complete_maintenance" string="Complete Maintenance" type="object" class="btn-success" 
                                invisible="state not in ['out_of_service', 'out_of_order']"
                                groups="modulio_hotelcore.group_hotel_housekeeping"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="room_number"/>
                                <field name="floor"/>
                                <field name="room_type_id"/>
                                <field name="max_occupancy" readonly="1" help="Max occupancy is defined in Room Type. Click on Room Type to edit."/>
                            </group>
                            <group>
                                <field name="size_sqm" readonly="1"/>
                                <field name="base_price" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="maintenance_required"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="state"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Room description..."/>
                        </group>
                        <group>
                            <field name="maintenance_notes" placeholder="Maintenance notes..."/>
                        </group>
                        <group>
                            <field name="status_change_reason" readonly="1"/>
                            <field name="last_status_change" readonly="1"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Hotel Room Search View -->
        <record id="view_hotel_room_search" model="ir.ui.view">
            <field name="name">hotel.room.search</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <search string="Rooms">
                    <field name="room_number"/>
                    <field name="room_type_id"/>
                    <field name="floor"/>
                    <field name="state"/>
                    <field name="last_status_change" string="From (Last Status Change)" filter_domain="[('last_status_change', '&gt;=', self)]"/>
                    <field name="last_status_change" string="To (Last Status Change)" filter_domain="[('last_status_change', '&lt;=', self)]"/>
                    <separator/>
                    <filter string="Clean" name="clean" domain="[('state', '=', 'clean')]"/>
                    <filter string="Check In" name="check_in" domain="[('state', '=', 'check_in')]"/>
                    <filter string="Check Out" name="check_out" domain="[('state', '=', 'check_out')]"/>
                    <filter string="Dirty" name="dirty" domain="[('state', '=', 'dirty')]"/>
                    <filter string="Make Up Room" name="make_up_room" domain="[('state', '=', 'make_up_room')]"/>
                    <filter string="Inspected" name="inspected" domain="[('state', '=', 'inspected')]"/>
                    <filter string="Out of Service" name="out_of_service" domain="[('state', '=', 'out_of_service')]"/>
                    <filter string="Out of Order" name="out_of_order" domain="[('state', '=', 'out_of_order')]"/>
                    <filter string="House Use" name="house_use" domain="[('state', '=', 'house_use')]"/>
                    <separator/>
                    <filter string="Maintenance Required" name="maintenance_required" domain="[('maintenance_required', '=', True)]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('last_status_change', '>=', context_today())]"/>
                    <group expand="0" string="Group By">
                        <filter string="Room Type" name="group_room_type" context="{'group_by': 'room_type_id'}"/>
                        <filter string="Floor" name="group_floor" context="{'group_by': 'floor'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Hotel Room Kanban View -->
        <record id="view_hotel_room_kanban" model="ir.ui.view">
            <field name="name">hotel.room.kanban</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <kanban string="Rooms" class="o_kanban_small_column">
                    <field name="room_number"/>
                    <field name="floor"/>
                    <field name="room_type_id"/>
                    <field name="state"/>
                    <field name="max_occupancy"/>
                    <field name="maintenance_required"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click" t-att-class="'oe_kanban_card_' + record.state.raw_value">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                Room <field name="room_number"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                Floor <field name="floor"/> - <field name="room_type_id"/>
                                            </div>
                                        </div>
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Max: <field name="max_occupancy"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span class="badge badge-pill" t-att-class="'badge-' + (record.state.raw_value == 'clean' ? 'success' : record.state.raw_value == 'dirty' ? 'warning' : record.state.raw_value == 'make_up_room' ? 'info' : record.state.raw_value == 'inspected' ? 'success' : record.state.raw_value == 'out_of_service' ? 'warning' : record.state.raw_value == 'out_of_order' ? 'danger' : record.state.raw_value == 'house_use' ? 'info' : 'secondary')">
                                                    <field name="state"/>
                                                </span>
                                                <span t-if="record.maintenance_required.raw_value" class="fa fa-wrench text-warning" title="Maintenance Required"/>
                                                <span t-if="record.state.raw_value == 'dirty'" class="fa fa-broom text-warning" title="Needs Cleaning"/>
                                                <span t-if="record.state.raw_value == 'make_up_room'" class="fa fa-broom text-info" title="Being Cleaned"/>
                                                <span t-if="record.state.raw_value == 'inspected'" class="fa fa-check text-success" title="Inspected"/>
                                                <span t-if="record.state.raw_value == 'out_of_service'" class="fa fa-tools text-warning" title="Out of Service"/>
                                                <span t-if="record.state.raw_value == 'out_of_order'" class="fa fa-exclamation-triangle text-danger" title="Out of Order"/>
                                                <span t-if="record.state.raw_value == 'house_use'" class="fa fa-home text-info" title="House Use"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Hotel Room Calendar View -->
        <record id="view_hotel_room_calendar" model="ir.ui.view">
            <field name="name">hotel.room.calendar</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <calendar string="Room Status Calendar" date_start="create_date" color="state">
                    <field name="room_number"/>
                    <field name="room_type_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Hotel Room Action -->
        <record id="action_hotel_room_act_window" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="res_model">hotel.room</field>
            <field name="view_mode">list,kanban,calendar,form</field>
            <field name="search_view_id" ref="view_hotel_room_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first room!
                </p>
                <p>
                    Rooms are the individual units in your hotel. Each room has a number,
                    floor, type, and status that tracks its availability.
                </p>
            </field>
        </record>

    </data>
</odoo>
